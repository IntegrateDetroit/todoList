									"var _ = require(\"lodash\");",
									"",
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"",
									"pm.test(\"Check that we have a description\", function () {",
									"    var itemDescription = pm.environment.get(\"itemDescription\");",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.description).to.eql(itemDescription);",
									"});",
									"",
									"",
									"pm.test(\"Check that we have an ID\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(_.has(jsonData, \"id\")).true;",
									"    var newId = jsonData.id;",
									"    pm.environment.set(\"itemID\", newId);",
									"});"
								]
