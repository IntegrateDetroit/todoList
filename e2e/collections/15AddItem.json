									"pm.test(\"Item ID is same as added item\", function () {",
									"    var expectedLength = 1;",
									"    var expectedItemId = pm.environment.get(\"itemID\");",
									"    var expectedItemDescription = pm.environment.get(\"itemDescription\");",
									"    ",
									"    var jsonData = pm.response.json();",
									"    var itemData = jsonData.items;",
									"    ",
									"    pm.expect(itemData.length).to.equal(expectedLength);",
									"    pm.expect(itemData[0].id).to.equal(expectedItemId);",
									"    pm.expect(itemData[0].description).to.equal(expectedItemDescription);",
									"});"
								]
